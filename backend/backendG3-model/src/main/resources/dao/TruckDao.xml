<?xml version="1.0" encoding="UTF-8"?>
<JdbcEntitySetup
        xmlns="http://www.ontimize.com/schema/jdbc"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.ontimize.com/schema/jdbc http://www.ontimize.com/schema/jdbc/ontimize-jdbc-dao.xsd"
        catalog="" schema="${mainschema}" table="truck"
        datasource="mainDataSource" sqlhandler="dbSQLStatementHandler">
    <DeleteKeys>
        <Column>id_truck</Column>
    </DeleteKeys>
    <UpdateKeys>
        <Column>id_truck</Column>
    </UpdateKeys>
    <GeneratedKey>id_truck</GeneratedKey>
    <Queries>
    <Query id="datatruck">
        <AmbiguousColumns>
            <AmbiguousColumn name="id_truck" prefix="IT" databaseName="id_truck" />
        </AmbiguousColumns>
        <Sentence>
            <![CDATA[
                    SELECT t.id_truck, t.plate AS plate,
                    CASE
                        WHEN t.ttype = 0 THEN 'Yes'
                        WHEN t.ttype = 1 THEN 'No'
                    END AS Type_of_Truck
                    FROM PUBLIC.Truck t
                    GROUP BY t.id_truck, t.plate, t.ttype
                    ORDER BY t.id_truck;
                ]]>
        </Sentence>
    </Query>
    </Queries>
</JdbcEntitySetup>